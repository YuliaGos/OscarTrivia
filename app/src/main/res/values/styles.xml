<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#4e0c0d</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="text_oscar" parent="TextAppearance.AppCompat">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#fbd26f</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="text_name" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="text_user" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">#ffffff</item>
        <item name="android:background">#4e0c0d</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="Question" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffe095</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="Radio_button" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffe095</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:paddingRight">55dp</item>
        <item name="android:buttonTint">#ffe095</item>
    </style>

    <style name="CheckBox" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffe095</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:paddingRight">55dp</item>
        <item name="android:buttonTint">#ffe095</item>
    </style>

    <style name="EditText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ffe095</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">#ffffff</item>
        <item name="android:background">#4e0c0d</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="submitButton" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#4e0c0d</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">#fbd26f</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:drawableLeft">@drawable/ic_submit</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">7dp</item>
    </style>

    <style name="shareButton" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#4e0c0d</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">#fbd26f</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:drawableLeft">@drawable/ic_share</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="resetButton" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#4e0c0d</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">#fbd26f</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:drawableLeft">@drawable/ic_reset</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

</resources>


